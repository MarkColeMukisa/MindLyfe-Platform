# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=mindlyfe_auth
DB_SYNCHRONIZE=false
DB_LOGGING=true
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_CLEANUP_INTERVAL=0 0 * * *
SESSION_MAX_INACTIVE_DAYS=30

# AWS Configuration (for SES email service)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Configuration
EMAIL_FROM=support@mindlyfe.com
EMAIL_VERIFICATION_SUBJECT=Verify your MindLyfe account
EMAIL_VERIFICATION_TEMPLATE=email-verification
EMAIL_PASSWORD_RESET_SUBJECT=Reset your MindLyfe password
EMAIL_PASSWORD_RESET_TEMPLATE=password-reset

# Frontend URLs
FRONTEND_URL=http://localhost:3000
VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# Logging
LOG_LEVEL=debug

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10